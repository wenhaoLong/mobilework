/* components/Router/Router.wxss */
@import '/resources/iconfont.wxss';

.top-bar {
  padding: 10rpx 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.top-bar .sider-button,
.top-bar .sider-user {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}


.iconmenu-on,
.iconmenu-off {
  font-size: 50rpx;
}

.sider-user .user-image-box {
  height: 50rpx;
  width: 50rpx;
}

.sider-user .user-image {
  border-radius: 50%;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 300;
}

.drawer {
  position: fixed;
  width: 65%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #001529;
  color: #fff;
  z-index: 350;

  /* transform: translateX(-100%); */
}

.drawer .head{
  /* padding-left: 30rpx; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  background-color: #002140;
  font-size: large;
  font-weight: bold;
}
.menu-list {
  padding-top: 30rpx;
  height: 100%;
}
.scroll {
  height: 100%;
}
.menu-level-1,
.menu-level-2 {
  height: 80rpx;
  padding-left:80rpx;
  padding-right: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.current-menu {
  background-color: #1890ff;

}