/* pages/scale/scale.wxss */
.cover {
  box-sizing: border-box;
  height: 100vh;
  padding:20rpx;
  padding-bottom: 0;
  background-color: #eee;
}
.entry {
  position: absolute;
  top: 15%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.entry text:last-child{
  color: #8a8a8a;
}
.entry button {
  margin-top: 30rpx;
}
.scalename {
  font-size: large;
}
.scale-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 90%;
  overflow: scroll;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.question {
  font-size: large;
}
.question-box radio-group {
  display: flex;
  flex-direction: column;
}
.question-box radio-group radio {
  padding:30rpx 20rpx;
  border-bottom: 2rpx solid #eee;
}
.button-box {
  text-align: center;
}
.button-box text {
  display: inline-block;
  margin-bottom: 20rpx;
  font-size: large;
}
.button-box text:first-child{
  color: #1890ff;
}
button[type=primary] {
  background-color: #1890ff;
}

.recording-box{
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  position: fixed;
  width: 400rpx;
  top: 50%;
  left:50%;
  transform: translate(-50%, -50%);

}
.recording-footer{
  justify-content: center;
}


.recording{
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.rocording-twig{
  width: 6px;
  height: 40px;
  background: white;
  margin: 0 3px;
  border-radius: 10px;
  animation: loading 0.8s infinite;
}
.rocording-twig:nth-child(2){
  animation-delay: 0.1s;
}
.rocording-twig:nth-child(3){
  animation-delay: 0.2s;
}
.rocording-twig:nth-child(4){
  animation-delay: 0.3s;
}
.rocording-twig:nth-child(5){
  animation-delay: 0.4s;
}
.rocording-twig:nth-child(6){
  animation-delay: 0.5s;
}
.rocording-twig:nth-child(7){
  animation-delay: 0.6s;
}
.rocording-twig:nth-child(8){
  animation-delay: 0.7s;
}
@keyframes loading{
  0%{
      height: 0;
  }
  50%{
      height: 40px;
  }
  100%{
      height: 0;
  }
}

/* 录音按钮 */
/* pages/touchSpeak/touchSpeak.wxss */
.record_button ,page{
  width: 100%;
  height: 400rpx;
  position: relative;
  
}
.record_button{
  background-color: #f7f7f7;
}
.record, .dot {
  height: 200rpx;
  width: 200rpx;
  border-radius: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation-iteration-count: 1;
}

.record {
  background: rgba(92, 212, 76);
  z-index: 10;
}

.dot {
  background: rgba(92, 212, 76, 0.7);
  z-index: 9;
}

.dot-blowup {
  animation: sploosh2 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
  animation-fill-mode: forwards;
}

.dot-zoomout {
  animation: sploosh3 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
  animation-fill-mode: forwards;
}

@keyframes sploosh2 {
  0% {
    box-shadow: 0 0 0 0px rgba(92, 212, 76, 0.7);
    background: rgba(92, 212, 76, 0.7);
  }

  100% {
    box-shadow: 0 0 0 15px rgba(92, 212, 76, 0.3);
    background: rgba(92, 212, 76, 0.3);
  }
}

@keyframes sploosh3 {
  0% {
     box-shadow: 0 0 0 15px rgba(92, 212, 76, 0.3);
    background: rgba(92, 212, 76, 0.3);
  }

  100%{
    box-shadow: 0 0 0 0px rgba(92, 212, 76, 0.7);
    background: rgba(92, 212, 76, 0.7);
  }
}

.record image {
  height: 90rpx;
  width: 90rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 10;
  background: transparent;
  transform: translate(-50%, -50%);
}