/* pages/setting/setting.wxss */
@import '../../resources/fcui.wxss';
image {
  width: 100%;
  height: 100%;
}
button {
  background-color: #1890ff;
  color: #fff;
}
.cover {
  padding: 0rpx 10rpx;
}
.header > view {
  display: inline-block;
  padding: 20rpx 30rpx;
  font-size: medium;

}
.selected {
  color: #1890ff;
  border-bottom: 4rpx solid #1890ff;
}
.body {
  padding: 40rpx;
}
.body .title {
  display: block;
  font-size: larger;
  padding: 20rpx 0;
}
.content-item input,
picker{
  border: 2rpx solid #e6d8d8;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin: 20rpx 0;
  width: 70%;
  height: 50rpx;
}

input[disabled],
picker[disabled]{
  background-color: #eee;
}
.button-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
button[type=primary] {
  background-color: #1890ff;
}
.safety-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 0;
  align-items: center;
  border-bottom: 2rpx solid #e6d8d8;
  /* height: 100rpx; */
}
.safety-list view:last-child{
  color: #1890ff;
}
.safety-list-item {
  display: flex;
  flex-direction: column;
  color: #595959;
}
.form-buttons{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
}

