/* mask蒙层的样式 */
.model-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 3000;
  background-color: rgb(0, 0, 0,0.5);
  
}
.model-box {
  background: #fff;
  z-index: 5000;
  width: 70%;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.model-header{
  display: block;
  padding:20rpx 0;
  font-size: large;
}
.model-body{
  width: 95%;
}
.model-text {
  color: #595959;
}
.model-footer{
  display: flex;
  width: 95%;
  flex-direction: row;
  justify-content: space-between;
}
.model-footer-buttons {
  border-top: 1rpx solid #eee;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.model-footer button{
  line-height: normal;
  background-color: initial;
}
.model-footer button::after{
  border:none;

}
.model-button-cancel,
.model-button-confirm {
  flex:1;
  padding: 20rpx;
  text-align: center;
  font-size: medium;
}
.model-button-cancel {
  color: #DC143C;
}
.model-button-confirm {
  color: #1890ff;
}

/* 关于form的一些样式 */
.form{
  display: flex;
  flex-direction: column;
}
.form-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 80rpx;
  margin-top: 20rpx;
}
.form-row input{
  border: 2rpx solid #e6d8d8;
  height: 80%;
  align-self: flex-start;
  border-radius: 10rpx;
  padding-left: 10rpx;
}
.form-cell{
  flex: 1;
}
.form-cell input{
  border:none;
}
.form-cell button{
  height: 100%;
  font-size: medium;
  line-height: sacle(100%);
}

/* 
* 关于table的一些样式
*/
.table {
  display: table;
  /* width: max-content; */
  min-width: 100%;
  white-space: nowrap;
  text-align: center;
  font-size: small;
  border-top: 2rpx solid #e8e8e8;
  border-left: 2rpx solid #d8d8d8;
}

.table-thead {
  display: table-header-group;

}

.table-tbody {
  display: table-row-group;
}

.table-row {
  display: table-row;
}

.table-cell {
  display: table-cell;
  padding: 20rpx;
  border-right: 2rpx solid #e8e8e8;
  border-bottom: 2rpx solid #e8e8e8;
}
.table-cell .cell-item {
  overflow: hidden;
  display: inline-block;
}

.table-row-even {
  background-color: #f5faff;
}

.table-row-odd {
  background-color: #fff;
}